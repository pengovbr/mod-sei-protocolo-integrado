# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*.php]
indent_style = space
indent_size = 4
end_of_line = crlf
insert_final_newline = true
charset = latin1
trim_trailing_whitespace = true
insert_final_newline = true
